grammar TreetopParser

  rule expression
    assignment / data
  end

  rule data
    number / text
  end

  rule number
    [\d]+ <NumberLiteral>
  end

  rule text
    '"' ([^"\\] / "\\" . )* '"' <TextLiteral>
  end

  rule assignment
    setword data <Assignment>
  end

  rule setword
    [\w]+ ':' space? <Setword>
  end

  rule space
    ' '
  end

  rule colon
    ':'
  end

end
